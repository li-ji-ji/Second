/* pages/history/history.wxss */

.nav {
    height: 80rpx;
    width: 100%;
    box-sizing: border-box;
    overflow: hidden;
    line-height: 80rpx;
    background: #f7f7f7;
    font-size: 16px;
    white-space: nowrap;
    position: fixed;
    top: 128rpx;
    left: 0rpx;
    z-index: 99;
    border-bottom: 1px solid rgb(192, 191, 191);
}

.nav-item {
    width: 33.3%;
    display: inline-block;
    text-align: center;
}

.nav-item.active {
    /* color: red; */
    /* border-right: 1rpx solid rgb(192, 191, 191); */
    border: 1rpx solid rgb(192, 191, 191);
    background: linear-gradient( to bottom, #ffffff 50%, #1E90FF);
}

.tab-box {
    /* background: greenyellow; */
    padding-top: 80rpx;
    height: 500rpx;
    box-sizing: border-box;
}

.tab-content {
    overflow-y: scroll;
}

#listTitle {
    width: 100%;
    height: 70rpx;
    background: white;
    border: #8f8e8e solid 1rpx;
    box-sizing: border-box;
    margin: 3rpx;
    line-height: 70rpx;
    /* box-shadow: inset 0px 0px 5px 1px rgb(219, 239, 248) */
}

#listContent {
    width: 100%;
    display: flex;
    flex-direction: column;
}

.displayArea {
    width: 100%;
    display: flex;
    flex-direction: row
}

#content {
    width: 40%;
    display: flex;
    flex-direction: column;
}

.itemArea {
    width: 100%;
    /* height: 60rpx; */
    /* background: tan; */
    display: flex;
    flex-direction: column;
}

#title {
    width: 100%;
    height: 60rpx;
    font-size: 30rpx;
    font-weight: bold;
    line-height: 60rpx;
    padding-left: 30rpx;
}

.contentBlock {
    height: 60rpx;
    line-height: 60rpx;
}

#dateAndImg {
    width: 60%;
    position: relative;
}

.nowDate {
    position: relative;
    width: 150rpx;
    height: 150rpx;
    background: white;
    left: 120rpx;
    top: 50rpx;
    border: 10rpx solid dodgerblue;
    border-radius: 50%;
    line-height: 150rpx;
    text-align: center;
    font-size: 50rpx
}

.noteBg {
    width: 100%;
    /* background: black; */
    background-color: rgba(0, 0, 0, 0.7)!important;
    position: absolute;
    top: 0;
    z-index: 99;
    display: flex;
    flex-direction: column;
    align-items: center
}

.noteArea {
    opacity: 1;
    width: 100%;
    height: 60%;
    background: #ffffff;
    position: absolute;
    bottom: 0;
    display: flex;
    flex-direction: column;
    align-content: center;
}

#noteTitle {
    width: 100%;
    height: 10%;
    background: #f7f7f7;
    color: #1E90FF;
    text-align: center;
    line-height: 75rpx;
}

#line_1 {
    width: 100%;
    height: 5rpx;
    background: #1E90FF;
}

#line_2 {
    width: 100%;
    height: 20rpx;
    background: #f7f7f7
}

.noteScroll {
    height: 86.94%;
    background: #f7f7f7;
    display: flex;
    flex-direction: row;
}

#noteBlock {
    width: 100%;
    display: flex;
    flex-direction: row;
}

#checkInLogoArea {
    width: 20%;
    height: 170rpx;
    /* background: aqua; */
    display: flex;
    flex-direction: column;
    position: relative;
}

#upLine {
    width: 50rpx;
    height: 50rpx;
    border-right: 3rpx solid #1E90FF;
    position: absolute;
    /* left: 35rpx; */
    top: 20rpx
}

#checkInLogoArea>.imageBlock {
    width: 70rpx;
    height: 58rpx;
    line-height: 58rpx;
    position: absolute;
    left: 18rpx;
    top: 58rpx
}

.imageBlock>image {
    width: 70rpx;
    height: 70rpx;
}

#downLine {
    width: 50rpx;
    height: 50rpx;
    border-right: 3rpx solid #1E90FF;
    position: absolute;
    /* left: 35rpx; */
    top: 118rpx
}

#registerTime {
    width: 80%;
    height: 170rpx;
    line-height: 170rpx;
    color: #1E90FF;
}

.img {
    position: absolute;
    width: 100rpx;
    height: 100rpx;
    /* background: white; */
    left: 280rpx;
    top: 50rpx;
    border: 10rpx solid rgb(93, 240, 118);
    border-radius: 50%;
    line-height: 150rpx;
    text-align: center;
    font-size: 50rpx
}

#checkInArea {
    width: 100%;
    height: 110rpx;
    /* background: aqua; */
}

#tip {
    font-size: 20rpx;
    color: rgb(247, 101, 101)
}

#checkIn_On {
    width: 100%;
    height: 80rpx;
    background: rgb(84, 238, 84);
    color: white;
    font-size: 30rpx;
    line-height: 80rpx;
    text-align: center;
}

#checkIn_Off {
    width: 100%;
    height: 80rpx;
    background: rgb(105, 105, 105);
    color: rgb(53, 51, 51);
    font-size: 30rpx;
    line-height: 80rpx;
    text-align: center;
}