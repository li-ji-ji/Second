/* pages/history/history.wxss */

.nav {
    height: 80rpx;
    width: 100%;
    box-sizing: border-box;
    overflow: hidden;
    line-height: 80rpx;
    background: #f7f7f7;
    font-size: 16px;
    white-space: nowrap;
    position: fixed;
    top: 128rpx;
    left: 0rpx;
    z-index: 99;
    border-bottom: 1px solid rgb(192, 191, 191);
}

.nav-item {
    width: 50%;
    display: inline-block;
    text-align: center;
}

.nav-item.active {
    /* color: red; */
    /* border-right: 1rpx solid rgb(192, 191, 191); */
    border: 1rpx solid rgb(192, 191, 191);
    background: linear-gradient( to top, rgb(165, 223, 250) 10%, #ffffff 90%);
}

.tab-box {
    /* background: greenyellow; */
    padding-top: 80rpx;
    height: 500rpx;
    box-sizing: border-box;
}

.tab-content {
    overflow-y: scroll;
}

#listTitle {
    width: 100%;
    height: 70rpx;
    background: white;
    border: #8f8e8e solid 1rpx;
    box-sizing: border-box;
    margin: 3rpx;
    line-height: 70rpx;
    /* box-shadow: inset 0px 0px 5px 1px rgb(219, 239, 248) */
}

#listContent {
    width: 80%;
    display: flex;
    flex-direction: row;
}

.titleBlock {
    width: 250rpx;
    height: 100rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.titleBlock>view {
    height: 70rpx;
    line-height: 70rpx;
}

.contentBlock>view {
    height: 70rpx;
    line-height: 70rpx;
}