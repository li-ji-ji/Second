/* news.wxss */

#page {
    background: #eaf4f7;
    padding-bottom: 10rpx;
    padding-top: 10rpx;
}

#newsBackground {
    width: 98%;
    margin: 0 auto;
    /* height: 600rpx; */
    background: white;
    padding: 15rpx;
    box-sizing: border-box;
    border-radius: 20rpx;
}

#newsArea {
    /* height: 500rpx; */
    /* background: aqua; */
    display: flex;
    flex-direction: column;
    align-items: center;
}

#newBlock {
    width: 90%;
    /* height: 300rpx; */
    /* background: #D1B848; */
    margin: 20rpx 0;
    border: 1rpx solid rgb(192, 192, 192);
    display: flex;
    flex-direction: column;
    align-items: center;
    border-radius: 20rpx;

}

#titleBlock {
    position: relative;
    width: 100%;
    height: 100rpx;
    /* background: #D1B848; */
}

#titleBlock_1 {
    width: 100%;
    height: 50rpx;
    background: linear-gradient( to right, rgb(72, 136, 209) 60%, #ffffff);
}

#titleBlock_2 {
    position: absolute;
    left: 220rpx;
    top: 18rpx;
    width: 66rpx;
    height: 66rpx;
    background: rgb(72, 136, 209);
    transform: rotate(45deg);
}

#titleBlock_3 {
    width: 252rpx;
    height: 50rpx;
    background: rgb(72, 136, 209);
    text-align: center;
    color: #fff;
    display: inline-block
}

#headPortrait {
    position: absolute;
    left: 43rpx;
    top: -20rpx;
    width: 70rpx;
    height: 70rpx;
    background: #ffffff;
    border: 15rpx solid rgb(167, 166, 166);
    border-radius: 50%;
    box-sizing: border-box;
}

#contentArea {
    width: 80%;
    /* height: 200rpx; */
    /* background: tan; */
    font-size: 20rpx;
    text-indent: 2rem;
    text-decoration: cadetblue;
    /* padding: 20rpx 20rpx; */
    /* text-align: center; */
    vertical-align: middle;
    margin: 65rpx 0;
    word-wrap: break-word;
}