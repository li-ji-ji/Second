/**index.wxss**/

#mineBg {
    width: 100%;
    height: 1110rpx;
    margin: 0 auto;
    /* height: 600rpx; */
    background: linear-gradient(to top right, rgb(134, 195, 231), white 70%, rgb(109, 207, 245));
    /* padding: 15rpx; */
    display: flex;
    flex-direction: column;
    align-items: center;
}

#userMsg {
    width: 98%;
    height: 300rpx;
    /* background: linear-gradient( rgb(38, 135, 245), white, blue); */
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
}

.userIcon {
    width: 160rpx;
    height: 160rpx;
    display: block;
    overflow: hidden;
    border-radius: 50%;
    border: 5rpx solid #fff;
    margin-top: 50rpx;
}

.userName {
    color: rgb(0, 153, 255)
}

#scoreArea {
    margin: 20rpx;
    width: 70%;
    height: 200rpx;
    border-radius: 20rpx;
    background: rgb(109, 221, 184);
    display: flex;
    flex-direction: row;
}

#scoreText {
    width: 45%;
    line-height: 200rpx;
    font-size: 50rpx;
    color: #fff;
    /* background: teal */
}

#score {
    line-height: 200rpx;
    font-size: 50rpx;
    color: #fff;
}

#otherArea {
    width: 97%;
    background: #fff;
    border-top: 1rpx solid rgb(206, 200, 200);
    border-radius: 12rpx;
}

.otherRow {
    width: 97%;
    height: 70rpx;
    border-bottom: 1rpx solid rgb(206, 200, 200);
    padding-left: 20rpx;
    line-height: 70rpx;
}