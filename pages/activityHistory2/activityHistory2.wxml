<!--pages/activityHistory2/activityHistory2.wxml-->

<wxs module="DateFormat" src="../../wxs/DateFormat.wxs"></wxs>
<component-topnav inner-title="{{title}}" is-show-back="true"></component-topnav>
<view class="container-box">
    <view class="history-nav-box">
        <component-historyNav bindurlMsg="getList"  is-check-btn="{{checkBtn}}" stu-id="{{stuId}}"></component-historyNav>
    </view>
    <!-- 分割 -->
    <view style="width:100%;height:70rpx;"></view>
    <!-- 活动列表 -->
    <!-- 列表容器 -->
    <scroll-view enable-flex scroll-y style="width:96%;height:{{windowHeight*0.82}}px;" class="history-list-box">
      <component-listitem item-data="true"  wx:for="{{historyList}}" wx:key='key'>
        <view slot="title" class="apply-title-box">
          活动编号：{{item.activityId}}
        </view>
        <view slot="content">
          <view class="content-font">活动分类：{{item.activityKindName}}</view>
          <view class="content-font">主办社团/部门：{{item.activityAssoName}}</view>
          <view class="content-font">开始时间：{{DateFormat.dateTimeFormat(item.activityStartTime)}}</view>
          <view class="content-font">结束时间：{{DateFormat.dateTimeFormat(item.activityFinishTime)}}</view>
        </view>
      </component-listitem>
    </scroll-view>
</view>
